/* 页面整体 */

.profile {
  margin: 0rpx 20rpx;
  padding-bottom: 20rpx;
}

.profile .head {
  width: 100%;
}

/* 页面标题 */

.profile .head .title {
  font-size: 96rpx;
  font-weight: bolder;
}

/* 头像 */

.profile .head .avatar {
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin: auto;
}

/* 引言 */

.profile .body .words {
    margin: 10rpx;
    padding: 15rpx;
    border-left: 8rpx solid #ccc;
    background-color:#f1f1f1;
}

.body .repos .column {
  width: 48%;
  margin: 1%;
  display: inline-block;
  vertical-align: top;
}

.body .repos .column .repo {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  color: white;
  background: radial-gradient(circle at top left, #333333, #d81606);
}

.body .repos .column .name {
  font-size: 48rpx;
  font-weight: bold;
  word-wrap: break-word;
}

.body .repos .column .description {
  font-size: 28rpx;
}

.body .repos .column .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.body .repos .column .language {
  font-size: 28rpx;
  font-weight: bold;

}

.body .repos .column .star {
  font-size: 28rpx;
  font-weight: bold;

}